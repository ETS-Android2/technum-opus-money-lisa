<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="84dp">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />


    <TextView
        android:id="@+id/tv_amount_fetch"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="7dp"
        android:includeFontPadding="false"
        android:paddingStart="15dp"
        android:paddingTop="8dp"
        android:paddingEnd="40dp"
        android:text="99999"
        android:textAlignment="viewEnd"
        android:textColor="@color/indian_red"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.925"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_currency_fetch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="EUR"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold"
        android:translationZ="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_amount_fetch"
        app:layout_constraintEnd_toEndOf="@+id/tv_amount_fetch"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="@+id/tv_amount_fetch"
        app:layout_constraintTop_toTopOf="@+id/tv_amount_fetch" />

    <TextView
        android:id="@+id/tv_date_added"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="77dp"
        android:text="Entry Date"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_amount_fetch"
        app:layout_constraintEnd_toStartOf="@+id/tv_amount_fetch"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_amount_fetch"
        app:layout_constraintVertical_bias="1" />

    <TextView
        android:id="@+id/tv_trans_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="77dp"
        android:text="Txn Title"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_amount_fetch" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="10dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_trans_title"
        app:layout_constraintVertical_bias="0" />

    <ImageView
        android:id="@+id/iv_recur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="208dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_trans_title"
        app:layout_constraintEnd_toEndOf="@+id/tv_amount_fetch"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/tv_trans_title"
        app:layout_constraintTop_toTopOf="@+id/tv_trans_title"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/ic_recur_light" />

    <ImageView
        android:id="@+id/iv_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="42dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_trans_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_trans_title"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/ic_contact_light" />

    <ImageView
        android:id="@+id/iv_circle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_circle" />

    <ImageView
        android:id="@+id/iv_cat_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_circle"
        app:layout_constraintEnd_toEndOf="@+id/iv_circle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/iv_circle"
        app:layout_constraintTop_toTopOf="@+id/iv_circle"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/ic_cat_gasoline" />

</androidx.constraintlayout.widget.ConstraintLayout>