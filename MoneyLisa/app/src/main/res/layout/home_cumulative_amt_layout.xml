<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="#9ED5CF">

    <TextView
        android:id="@+id/tv_amount_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="25dp"
        android:text="100"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/tv_currency_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="150dp"
        android:text="EUR"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_amount_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_amount_home"
        app:layout_constraintTop_toTopOf="@+id/tv_amount_home"
        app:layout_constraintVertical_bias="0.77" />

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/pb_threshold"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="25dp"
        app:background_progressbar_color="@color/ivory"
        app:background_progressbar_width="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:progressbar_color="#F44336"
        app:progressbar_width="15dp" />

    <TextView
        android:id="@+id/et_usage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100%"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/pb_threshold"
        app:layout_constraintEnd_toEndOf="@+id/pb_threshold"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/pb_threshold"
        app:layout_constraintTop_toTopOf="@+id/pb_threshold"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/et_usage_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="of monthly limit"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/pb_threshold"
        app:layout_constraintEnd_toEndOf="@+id/pb_threshold"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/pb_threshold"
        app:layout_constraintTop_toTopOf="@+id/pb_threshold"
        app:layout_constraintVertical_bias="0.6" />

</androidx.constraintlayout.widget.ConstraintLayout>